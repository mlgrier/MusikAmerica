<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mlgrier.musikamerica">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MostActivity"
            android:label="@string/category_most"/>
        <activity android:name=".GenresActivity"
            android:label="@string/category_genres"/>
        <activity android:name=".ArtistsActivity"
            android:label="@string/category_artists"/>
        <activity android:name=".PlaylistActivity"
            android:label="@string/category_playlist"/>
        <activity android:name=".SearchActivity"
            android:label="@string/category_search"></activity>
    </application>

</manifest>